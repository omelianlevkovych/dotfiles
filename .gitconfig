# Shared git configuration
# Machine-specific settings (name, email) go in ~/.gitconfig.local

[include]
    path = ~/.gitconfig.local

[core]
    editor = nvim

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[diff]
    colorMoved = default

[merge]
    conflictStyle = diff3

[rerere]
    enabled = true

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate
